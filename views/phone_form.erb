<h4>Add phone number</h4>

<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <form action="/contacts/<%= @contact.id %>/phones" class="form-horizontal" method="post">
      <div class="form-group">
        <label target="phone_area_code" class="col-sm-3 control-label">Area Code:</label>
        <div class="col-sm-9">
          <input id="phone_area_code" name="phone_area_code" class="form-control">
        </div>
      </div>
      <div class="form-group">
        <label target="phone_number" class="col-sm-3 control-label">Number</label>
        <div class="col-sm-9">
          <input id="phone_number" name="phone_number" class="form-control">
        </div>
      </div>
      <div class="form-group">
        <label target="phone_type" class="col-sm-3 control-label">Number</label>
        <div class="col-sm-9">
          <select id="phone_type" class="form-control" name="phone_type">
            <option>Mobile</option>
            <option>Home</option>
            <option>Work</option>
          </select>
        </div>
      </div>

      <button type="submit" class="btn btn-default">Submit!</button>
    </form>
  </div>
</div>
